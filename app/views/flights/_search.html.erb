<%= form_tag '/flights', html: {class: "form-horizontal"}, method: "get" do %>
  <div class="form-group">
    
    <p><%= select_tag :from_airport, options_for_select(@airport_options, params[:from_airport]), prompt: "From:", class: "form-control form-control-inline" %></p><br>
    
    <p><%= select_tag :to_airport, options_for_select(@airport_options, params[:to_airport]), prompt: "To:", class: "form-control form-control-inline" %></p><br>

    <p><%= select_tag :start_time, options_for_select(@date_options, params[:start_time]), prompt: "Date:", class: "form-control form-control-inline" %></p><br>

    <p><%= select_tag :passengers,options_for_select((1..4), params[:passengers]), prompt: "Passengers", class: "form-control form-control-inline" %></p><br>

    <p class="lead"><%= submit_tag "Search", name: nil, class: "btn btn-default" %></p>
  </div>
<% end %>
     

